---
import type { RepoData } from "../scripts-ssr/types";
import OpenExternalIcon from "./Icons/OpenExternalIcon.astro";

import Star from "./Icons/Star.astro";

export type Props = RepoData;

const { author, name, description, language, stars } = Astro.props;
---

<section>
    <button>
        <OpenExternalIcon />
    </button>

    <div class="author">
        <img src={author.avatar} alt="" />
        <span>{author.name}</span>
    </div>

    <h3>{name}</h3>
    <span class="description">{description}</span>

    <div class="info">
        <span class="language" style={`--lang-color: ${language.color};`}>
            {language.name}
        </span>
        <div class="stars">
            <Star />
            <span>{stars}</span>
        </div>
    </div>
</section>

<style>
    section {
        position: relative;
        background: var(--surface2);
        border: 1px solid var(--color-semi-trans);
        padding: 1em;
        border-radius: 8px;
        display: grid;
    }

    h3 {
        margin: 0;
    }

    span {
        font-size: 0.9em;
    }

    .description {
        margin-top: 0.3em;
        margin-bottom: 0.8em;
    }

    .author,
    .info,
    .stars {
        display: flex;
        align-items: center;
    }

    .author {
        margin-bottom: 1em;
    }

    .author img {
        width: 1.2em;
        height: 1.2em;
        border-radius: 50%;
        margin-right: 0.3em;
    }

    .info {
        line-height: 1.2em;
    }

    .stars :global(svg) {
        width: 1.2em;
        height: 1.2em;
        transform: translateY(-0.05em);
        margin-right: 0.1em;
    }

    .language {
        margin-right: 0.6em;
    }

    .language::before {
        content: "";
        display: inline-block;
        width: 0.8em;
        height: 0.8em;
        transform: translateY(0.05em);
        border-radius: 50%;
        background: var(--lang-color);
    }

    button {
        all: unset;
        cursor: pointer;
        color: var(--color-semi-trans);
        position: absolute;
        top: 1em;
        right: 0.5em;
        transition: 200ms color;
    }

    button:hover {
        color: var(--accent);
    }

    button :global(svg) {
        width: 1.2em;
        height: 1.2em;
    }
</style>
